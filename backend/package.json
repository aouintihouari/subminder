  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.25",
    "@types/hpp": "^0.2.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.30",
    "@types/pino": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "copyfiles": "^2.4.1",
    "ioredis-mock": "^8.13.1",
    "jest": "^30.2.0",
    "jest-mock-extended": "^4.0.0",
    "pino-pretty": "^13.1.3",
    "prisma": "^5.10.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.0"
