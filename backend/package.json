{
  "name": "subminder-api",
  "version": "0.1.0",
  "description": "Backend API for SubMinder",
  "main": "dist/server.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc && copyfiles -u 1 \"src/**/*.ejs\" dist/",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@sentry/node": "^10.34.0",
    "@sentry/profiling-node": "^10.34.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.9.1",
    "jsonwebtoken": "^9.0.3",
    "node-cron": "^4.2.1",
    "pino": "^10.2.0",
    "pino-http": "^11.0.0",
    "resend": "^6.7.0",
    "zod": "^4.3.2"
